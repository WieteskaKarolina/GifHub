<!DOCTYPE html>
<html>
<head>
  <title>GIfHub</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <link rel="icon" href="gif.png" type="image/png">

  <style>
    body {
      background: linear-gradient(to bottom, #f3f2f2, #ec76cd, #000000);
      margin: 0;
      padding: 0;
    }
    .search-form {
      text-align: center;
      margin-top: 20px;
    }
    .search-container {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }
    .search-input {
      margin-right: 5px;
      width: 25%;
      max-width: 300px;
    }
    .search-button {
      border: none;
      background: none;
      padding: 0;
      cursor: pointer;
      height: 38px;
      margin-left: 10px;
    }
    .image-container {
      margin-bottom: 5px;
      background-color: rgb(14, 13, 13);
      padding-left: 15px;
      padding-right: 15px;
      padding-top: 20px;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .image {
      width: 100%;
      height: auto;
    }

    .favorite-button {
      border: none;
      background: none;
      padding: 0;
      cursor: pointer;
      padding: 10px;
    }

    .row {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      grid-gap: 10px;
      margin: 0;
    }
  </style>
  
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgb(12, 12, 12);">
    <div class="container">
      <a class="navbar-brand" href="#">GIFHUB</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
        </ul>
      </div>
      <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/loginOrRegister">Login/Register</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="search-container">
      <div class="search-form">
        <form class="form-inline" action="/" method="GET">
          <input class="form-control search-input" type="text" name="query" placeholder="Search GIFs" required>
          <button class="search-button" type="submit">
            <img src="search.png" alt="Search">
          </button>
        </form>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <% imageUrls.forEach(function(url, index) { %>
          <div class="image-container">
            <img class="image" src="<%= url %>">
            <button class="favorite-button">
              <img src="heart.png" alt="Polub">
            </button>
          </div>
        <% }) %>
      </div>
    </div>
    
    
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a class="page-link" href="/?page=1&limit=25" aria-label="Previous">
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          </a>
        </li>
        <li class="page-item"><a class="page-link" href="/?page=1&limit=25">1</a></li>
        <li class="page-item"><a class="page-link" href="/?page=2&limit=25">2</a></li>
        <li class="page-item"><a class="page-link" href="/?page=3&limit=25">3</a></li>
        <!-- Dodaj więcej stron tutaj w zależności od liczby stron -->
        <li class="page-item">
          <a class="page-link" href="/?page=2&limit=25" aria-label="Next">
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
          </a>
        </li>
      </ul>
    </nav>
    
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <script>
    // Obsługa zdarzenia kliknięcia przycisku "Polub"
    var favoriteButtons = document.querySelectorAll('.favorite-button');
    favoriteButtons.forEach(function(button) {
      button.addEventListener('click', function(event) {
        var imageUrl = event.target.parentNode.previousElementSibling.src;
        // Wykonaj żądanie API lub dodaj logikę dla polubienia obrazka
        console.log('Polubiono obrazek:', imageUrl);
      });
    });

    fetch('/?page=1&limit=25')
  .then(response => response.json())
  .then(data => {
    // Przetwarzaj dane i generuj elementy GIF na stronie
  })
  .catch(error => {
    console.log('Error:', error);
  });
  </script>

</body>
</html>
